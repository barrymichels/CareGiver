<header class="main-header">
    <div class="header-content">
        <a href="/" class="site-title"><%= getPageTitle() %></a>
        
        <div class="profile-menu">
            <button class="profile-button" aria-label="Profile menu">
                <div class="profile-icon">
                    <%= user.first_name[0] + user.last_name[0] %>
                </div>
            </button>
            <div class="dropdown-menu">
                <a href="/profile" class="menu-item">Profile</a>
                <% if (user.is_admin) { %>
                    <a href="/admin" class="menu-item">Admin Panel</a>
                    <a href="/admin/users" class="menu-item">Manage Users</a>
                <% } %>
                <a href="/logout" class="menu-item">Logout</a>
            </div>
        </div>
    </div>
</header>