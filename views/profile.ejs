<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= getPageTitle("Profile") %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <%- include('partials/header', { user }) %>
    
    <main class="profile-content">
        <div class="profile-container">
            <h1>Profile Settings</h1>
            
            <form id="profile-form" class="profile-form">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" 
                           value="<%= user.first_name %>" required
                           pattern="[A-Za-z\-']+" title="Letters, hyphens, and apostrophes only">
                </div>
                
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" 
                           value="<%= user.last_name %>" required
                           pattern="[A-Za-z\-']+" title="Letters, hyphens, and apostrophes only">
                </div>
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" 
                           value="<%= user.email %>" required>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="submit-btn">Save Changes</button>
                    <button type="button" id="changePasswordBtn" class="secondary-btn">Change Password</button>
                </div>
            </form>

            <!-- Notification Settings Section -->
            <div class="notification-settings">
                <h2>Notification Settings</h2>
                
                <form id="notification-form" class="notification-form">
                    <div class="form-group">
                        <label for="notificationAdvance">Notify me before shifts</label>
                        <div class="input-with-unit">
                            <input type="number" id="notificationAdvance" name="notificationAdvanceMinutes" 
                                   value="<%= notificationPreferences ? notificationPreferences.notification_advance_minutes : 15 %>"
                                   min="5" max="120" step="5" required>
                            <span class="unit">minutes before</span>
                        </div>
                        <small class="help-text">Get notified 5-120 minutes before your shifts</small>
                    </div>
                    
                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="morningSummaryEnabled" name="morningSummaryEnabled"
                                   <%= notificationPreferences && notificationPreferences.morning_summary_enabled ? 'checked' : '' %>>
                            <span class="checkmark"></span>
                            Enable daily morning summaries
                        </label>
                    </div>
                    
                    <div class="form-group" id="morningSummaryTimeGroup" 
                         style="<%= notificationPreferences && notificationPreferences.morning_summary_enabled ? '' : 'display: none;' %>">
                        <label for="morningSummaryTime">Morning summary time</label>
                        <input type="time" id="morningSummaryTime" name="morningSummaryTime" 
                               value="<%= notificationPreferences ? notificationPreferences.morning_summary_time : '07:00' %>">
                        <small class="help-text">When to receive your daily schedule summary</small>
                    </div>
                    
                    <div class="form-group">
                        <div class="push-notification-control">
                            <button type="button" id="enablePushBtn" class="push-btn">
                                <span id="pushBtnText">Enable Push Notifications</span>
                                <span id="pushBtnStatus" class="push-status">
                                    <%= notificationPreferences && notificationPreferences.push_enabled ? 'Enabled' : 'Disabled' %>
                                </span>
                            </button>
                            <small class="help-text">Allow this app to send push notifications to your device</small>
                        </div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="submit-btn">Save Notification Settings</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Password Change Modal -->
    <div id="passwordModal" class="modal">
        <div class="modal-content">
            <h2>Change Password</h2>
            <form id="password-form" class="password-form">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" name="currentPassword" required>
                </div>
                
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" 
                           minlength="8" required>
                    <div class="password-requirements">
                        Password must be at least 8 characters long
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" 
                           minlength="8" required>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="submit-btn">Update Password</button>
                    <button type="button" class="secondary-btn close-modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/unsaved-changes-modal') %>
    
    <script src="/js/header.js"></script>
    <script src="/js/profile.js"></script>
</body>
</html> 