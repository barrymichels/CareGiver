<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
<meta name="theme-color" content="#646cff">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="manifest" href="/manifest.json">
<link rel="apple-touch-icon" href="/icons/icon-192x192.png">

<header class="main-header">
    <div class="header-content">
        <a href="/" class="site-title">Wayne's Schedule</a>
        
        <div class="profile-menu">
            <button class="profile-button" aria-label="Profile menu">
                <div class="profile-icon">
                    <%= user.first_name[0] + user.last_name[0] %>
                </div>
            </button>
            <div class="dropdown-menu">
                <a href="/profile" class="menu-item">Profile</a>
                <% if (user.is_admin) { %>
                    <a href="/admin" class="menu-item">Admin Panel</a>
                    <a href="/admin/users" class="menu-item">Manage Users</a>
                <% } %>
                <a href="/logout" class="menu-item">Logout</a>
            </div>
        </div>
    </div>
</header>